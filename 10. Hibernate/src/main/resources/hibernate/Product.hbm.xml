<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="ru.itis.models.Product">
        <id name="id" type="java.lang.Long">
            <generator class="identity"/>
        </id>

        <property name="name"/>
        <property name="description"/>
        <property name="price"/>
        <property name="amount"/>

        <many-to-one name="shop" class="ru.itis.models.Shop">
            <column name="shop_id"/>
        </many-to-one>

        <many-to-one name="manufacturer" class="ru.itis.models.Manufacturer">
            <column name="manufacturer_id"/>
        </many-to-one>


        <bag name="purchases" table="product_purchase">
            <key>
                <column name="product_id" not-null="true"/>
            </key>
            <many-to-many entity-name="ru.itis.models.Purchase">
                <column name="purchase_id" not-null="true"/>
            </many-to-many>
        </bag>
    </class>
</hibernate-mapping>